#!/usr/bin/env sh

# Exit, if return non-zero or use an undefined variable.
set -eu

cd "$(dirname "$0")/.."

# Variables
DEFAULT_VERSION=$(ls versions | tail -1)
VERSION=${1:-$DEFAULT_VERSION}

# OS
os=$(./bin/os)

# Path
if [ $os = windows ]; then
	echo "$PWD/versions/$VERSION"
else
  echo "$PWD/versions/$VERSION/bin"
fi
